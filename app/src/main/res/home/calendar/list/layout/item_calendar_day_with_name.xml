<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="event"
            type="io.scal.ambi.ui.home.calendar.view.UICalendarDayWithEvents"/>

        <variable
            name="weekNameVisibility"
            type="Boolean"/>

        <variable
            name="selected"
            type="Boolean"/>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <include
            layout="@layout/item_calendar_week_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:day="@{event.date}"
            app:visibility="@{weekNameVisibility}"
            />

        <include
            layout="@layout/item_calendar_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            app:disabled="@{!event.enabled}"
            app:event="@{event}"
            app:highLighted="@{selected ?? false}"
            />

    </LinearLayout>

</layout>