<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>

        <variable
            name="viewModel"
            type="io.scal.ambi.ui.home.chat.list.ChatListViewModel"/>

    </data>

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coordinator"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/root_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="9dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/iv_new_message"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:padding="5dp"
                android:onClick="@{(view) -> viewModel.createNewMessage()}"
                android:scaleType="centerInside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_chat_new_message"/>

            <include
                android:id="@+id/c_search"
                layout="@layout/item_toolbar_content_search"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="18dp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_new_message"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_new_message"
                app:layout_constraintTop_toTopOf="@+id/iv_new_message"
                app:viewModel="@{viewModel.searchViewModel}"/>

            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/srl"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="60dp"
                android:layout_marginTop="6dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/c_search"
                app:onSwipeToRefresh="@{() -> viewModel.refresh()}">


                <io.scal.ambi.ui.global.view.AutoScrollRecyclerView
                    android:id="@+id/rv_chats"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />

            </android.support.v4.widget.SwipeRefreshLayout>

        </android.support.constraint.ConstraintLayout>

        <LinearLayout
            android:id="@+id/c_filters"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            app:layout_behavior="io.scal.ambi.ui.global.view.behavior.StaticViewViewBehavior"
            app:viewGroupModels="@{viewModel.filterModel.viewModels}"
            app:viewModelClickListener="@{(element) -> viewModel.filterModel.onFilterClicked(element)}"
            app:viewModelLayoutId="@{@layout/item_chat_filter}"
            />

    </android.support.design.widget.CoordinatorLayout>

</layout>