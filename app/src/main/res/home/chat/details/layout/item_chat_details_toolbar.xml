<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="viewModel"
            type="io.scal.ambi.ui.home.chat.details.ChatDetailsViewModel"/>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:actualImageScaleType="centerInside"
            app:iconImage="@{viewModel.dataState.chatInfo.icon}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:roundAsCircle="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:letterSpacing="-0.03"
            android:text="@{viewModel.dataState.chatInfo.title}"
            android:textColor="@color/gray"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="#general"
            />

        <ImageView
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginStart="5dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ic_creation_spinner_dropdown"/>

    </LinearLayout>

</layout>